<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="me.n1ar4.jar.analyzer.core.mapper.FavMapper">
    <resultMap id="methodMap" type="me.n1ar4.jar.analyzer.entity.MethodResult">
        <result column="class_name" property="className"/>
        <result column="method_name" property="methodName"/>
        <result column="method_desc" property="methodDesc"/>
    </resultMap>
    <delete id="cleanFav">
        DELETE FROM note_favorite_table
    </delete>
    <delete id="cleanFavItem">
        DELETE FROM note_favorite_table
        WHERE class_name = #{className}
          AND method_name = #{methodName}
          AND method_desc = #{methodDesc}
    </delete>
    <insert id="addFav">
        INSERT INTO note_favorite_table
        (class_name, method_name, method_desc)
        VALUES
        (#{className}, #{methodName}, #{methodDesc})
    </insert>
    <select id="getAllFavMethods" resultMap="methodMap">
        SELECT class_name, method_name, method_desc
        FROM note_favorite_table
        ORDER BY nf_id DESC
    </select>
</mapper>